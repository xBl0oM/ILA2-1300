<Window x:Class="RnGeezus.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RnGeezus"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="800">
    <Grid Background="#FFA4A4A4">
        <Label x:Name="WelcomeTitel" Content="RnGeezus" HorizontalAlignment="Center" Height="68" Margin="0,58,0,0" VerticalAlignment="Top" Width="236" FontSize="40" Foreground="White"/>
        <Button x:Name="WelcomeStartGame" Content="Start Game" HorizontalAlignment="Left" Height="90" Margin="125,217,0,0" VerticalAlignment="Top" Width="138" Click="Button_Click" FontSize="20" Foreground="White" BorderBrush="#33707070" Background="#FF3FCE38"/>
        <Button x:Name="WelcomeStartTutorial" Content="Start Tutorial" HorizontalAlignment="Center" Height="90" Margin="0,217,0,0" VerticalAlignment="Top" Width="138" FontSize="20" Background="#FFF08C3F" Click="WelcomeStartTutorial_Click"/>
        <Button x:Name="WelcomeEndGame" Content="End Game" HorizontalAlignment="Left" Height="90" Margin="537,217,0,0" VerticalAlignment="Top" Width="138" FontSize="20" Background="Red"/>
        <MediaElement x:Name="StartSong" LoadedBehavior="Manual" />

    </Grid>
</Window>
